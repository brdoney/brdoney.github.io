group :jekyll_plugins do
  gem 'jekyll-sitemap'
  gem 'jekyll-seo-tag'
end

# Ruby 3.0 doesn't include webrick, but Jekyll relies on it
# So this is a quick fix, until this is updated
gem "webrick", "~> 1.7"
